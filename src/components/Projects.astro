---
import projects from "../settings/projects.json";
---

<h2 class="text-5xl font-bold my-8 text-center">Projects</h2>

<!-- la clase flex-1 sirve para abarcar la mitad de la pantalla con cada div -->

{
  projects.map((project) => (
    <div class="flex flex-col text-center md:text-left md:flex-row">
      <div class="flex-1 p-4">
        <h2 class="text-2xl font-mono my-4">{project.title}</h2>
        <p class="my-2">{project.description}</p>
        <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400">
            More info
        </button>
      </div>
      <div class="flex-1">
        <img src={project.image} class="w-72 m-auto" />
      </div>
    </div>
  ))
}
